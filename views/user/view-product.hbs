    <section>
        <div class="container mt-3">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-1">
                    
                    <div class="card" style="height:auto;">
                        <img src="/public/product-image/{{this._id}}.jpg" class="card-img-top img-thumbnail" style="width: 15rem; height: 12rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.prodName}}</h5>
                            <p class="card-text fs-5">Rs/- {{this.price}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <a href="#" class="btn btn-primary">Add To Cart</a>

                        </div>
                    </div>
                    
                </div>{{/each}}
            </div>
        </div>
    </section>
  